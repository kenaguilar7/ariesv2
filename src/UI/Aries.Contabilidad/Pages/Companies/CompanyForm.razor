@using Aries.Contabilidad.Models.DTOs
@using Aries.Contabilidad.Models.Enums

<EditForm Model="@Company" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="companyName">Company Name</label>
        <InputText id="companyName" @bind-Value="Company.CompanyName" class="form-control" />
        <ValidationMessage For="@(() => Company.CompanyName)" />
    </div>

    <div class="form-group">
        <label for="code">Code</label>
        <InputText id="code" @bind-Value="Company.Code" class="form-control" />
        <ValidationMessage For="@(() => Company.Code)" />
    </div>

    <div class="form-group">
        <label for="idType">ID Type</label>
        <InputSelect id="idType" @bind-Value="Company.IdType" class="form-control">
            @foreach (var idType in Enum.GetValues(typeof(IdType)))
            {
                <option value="@idType">@idType</option>
            }
        </InputSelect>
    </div>

    <div class="form-group">
        <label for="numberId">Number ID</label>
        <InputText id="numberId" @bind-Value="Company.NumberId" class="form-control" />
        <ValidationMessage For="@(() => Company.NumberId)" />
    </div>

    <div class="form-group">
        <label for="address">Address</label>
        <InputText id="address" @bind-Value="Company.Address" class="form-control" />
        <ValidationMessage For="@(() => Company.Address)" />
    </div>

    <button type="submit" class="btn btn-primary">@ButtonText</button>
    <button type="button" class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
</EditForm>

@code {
    [Parameter] public CompanyDto Company { get; set; } = new();
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
} 